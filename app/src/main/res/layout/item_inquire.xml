<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="holder"
            type="com.kyad.traystorage.app.setting.InquiryActivity.ListAdapter.ListItemViewHolder" />
        <variable
            name="data"
            type="com.kyad.traystorage.data.model.ModelAsk" />

    </data>


    <LinearLayout
        android:id="@+id/doument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:background="@drawable/bg_label_reply"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:isSelect="@{data.status==0?false:true}"
                    android:text="@{data.status==0? @string/reply_wait : @string/answer_done}"
                    android:textColor="@drawable/bg_label_reply_text"
                    android:textSize="14sp" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:includeFontPadding="false"
                    android:text="@{data.reg_time}"
                    android:textColor="#6B6C6E"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:onClick="@{()->holder.onExpand()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="@{data.title}"
                    android:textColor="@{!data.isExpanded ? @color/C151515 : @color/focus_color}"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@{data.isExpanded ? @drawable/ic_arrow_up : @drawable/ic_arrow_down}" />

            </LinearLayout>

            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_spoqahansansneo_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="@{data.content}"
                android:textColor="#111111"
                android:textSize="14sp"
                android:visibility="@{data.isExpanded ? View.VISIBLE : View.GONE}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_reply_box"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="@{data.replyVisible ? View.VISIBLE : View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_label_reply_done"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="@string/answer_done"
                        android:textColor="#535455"
                        android:textSize="14sp" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:includeFontPadding="false"
                        android:text="@{data.reg_time}"
                        android:textColor="#6B6C6E"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:text="@{data.reply}"
                    android:textColor="#111111"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEDF0" />

    </LinearLayout>

</layout>