<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.ChangePasswordActivity" />
    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:onClick="@{()->activity.onBackPressed()}"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/text_intro"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:includeFontPadding="false"
                    android:lineHeight="34dp"
                    android:text="@string/change_password1"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kyad.traystorage.app.common.font.FontEditText
                            android:id="@+id/edit_password"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/password_hint"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:onTextChanged="@{()->activity.onValidate()}"
                            android:paddingVertical="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/line_password"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_confirm"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kyad.traystorage.app.common.font.FontEditText
                            android:id="@+id/edit_password2"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/reenter_password"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:onTextChanged="@{()->activity.onValidate()}"
                            android:paddingVertical="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/line_password2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />
                </LinearLayout>

                <com.kyad.traystorage.app.common.font.FontButton
                    android:id="@+id/next_btn"
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btn_approve_both"
                    android:enabled="@{activity.isEnabled}"
                    android:gravity="center"
                    android:onClick="@{()->activity.onConfirm()}"
                    android:text="@string/change_password_btn"
                    android:textColor="@{activity.isEnabled?@color/white:@color/gray}"
                    android:textSize="15dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>