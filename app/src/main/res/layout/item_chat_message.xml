            android:orientation="vertical"
            android:visibility="@{message.role.equals(`assistant`) ? View.VISIBLE : View.GONE}">

            <com.kyad.traystorage.app.common.font.FontTextView
                android:id="@+id/assistant_message_text"
                style="@style/font_spoqahansansneo_regular"
