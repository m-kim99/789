<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />
        <variable
            name="holder"
            type="com.kyad.traystorage.app.setting.FaqActivity.CategoryListAdapter.ListItemViewHolder" />
        <variable
            name="data"
            type="com.kyad.traystorage.data.model.ModelFaqItem" />

    </data>
    <com.kyad.traystorage.app.common.font.FontTextView
        style="@style/font_spoqahansansneo_regular"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_circle_dark"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="@{()->holder.onClick()}"
        android:paddingHorizontal="20dp"
        android:text="@{data.name}"
        android:textColor="@drawable/color_btn_circle_dark"
        android:textSize="14sp"
        app:isSelect="@{data.isSelected}" />
</layout>