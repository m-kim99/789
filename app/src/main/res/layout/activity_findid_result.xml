<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.FindIdResultActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFE"
        android:orientation="vertical">

        <!-- Status Bar -->
        <include
            layout="@layout/include_status_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <!-- 닫기 버튼 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_gnb_close"
                android:onClick="@{()->activity.onBackPressed()}"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- 타이틀 -->
            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_notosans_kr_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/findid_result1"
                android:textColor="#111111"
                android:textSize="22sp"
                android:lineHeight="32sp"
                android:includeFontPadding="false" />

            <!-- 아이디 결과 박스 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_id_result_box"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="40dp">

                <!-- 아이디 라벨 -->
                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_notosans_kr_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:textColor="#6B6C6E"
                    android:textSize="14sp"
                    android:includeFontPadding="false" />

                <!-- 아이디 값 -->
                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/text_result"
                    style="@style/font_notosans_kr_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="123"
                    android:textColor="#1E319D"
                    android:textSize="18sp"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- 로그인 버튼 -->
            <com.kyad.traystorage.app.common.font.FontButton
                style="@style/font_notosans_kr_bold"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_btn_login_primary"
                android:text="@string/login"
                android:textColor="#FDFDFE"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="@{()->activity.onLogin()}"
                android:includeFontPadding="false" />

            <!-- 비밀번호 찾기 버튼 -->
            <com.kyad.traystorage.app.common.font.FontButton
                style="@style/font_notosans_kr_bold"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_btn_login_secondary"
                android:text="@string/find_password"
                android:textColor="#1E319D"
                android:textSize="20sp"
                android:gravity="center"
                android:onClick="@{()->activity.onPassword()}"
                android:includeFontPadding="false" />
        </LinearLayout>

        <!-- Navigation Bar -->
        <include
            layout="@layout/include_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
</layout>