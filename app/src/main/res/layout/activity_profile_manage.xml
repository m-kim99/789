<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.kyad.traystorage.app.setting.ProfileManageActivity" />

        <variable
            name="model"
            type="com.kyad.traystorage.app.setting.ProfileManageActivity.ViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_spoqahansansneo_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/profile_management"
                android:textColor="@color/C151515"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{()->activity.onBackPressed()}"
                android:padding="15dp"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_margin="20dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_c_user_60"
                        app:riv_corner_radius="43dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:onClick="@{()->activity.onClickProfile()}"
                        android:src="@drawable/icon_c_add_24"
                        android:visibility="@{activity.isEditable?View.VISIBLE:View.GONE}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="20dp"
                    android:visibility="@{activity.isEditable?View.GONE:View.VISIBLE}">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        android:id="@+id/label_id"
                        style="@style/font_spoqahansansneo_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:text="@={model.name}"
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_toEndOf="@id/label_id"
                        android:onClick="@{()->activity.onClickEdit()}"
                        android:src="@drawable/icon_c_edit_linegray_32" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="20dp"
                    android:visibility="@{activity.isEditable?View.VISIBLE:View.GONE}">

                    <com.kyad.traystorage.app.common.font.FontEditText
                        android:id="@+id/edit_name"
                        style="@style/font_spoqahansansneo_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:layout_marginRight="30dp"
                        android:maxLength="50"
                        android:paddingVertical="10dp"
                        android:text="@={model.name}"
                        android:textColor="@color/black"
                        android:textSize="26dp"
                        android:visibility="@{activity.isEditable?View.VISIBLE:View.GONE}" />

                    <ImageView
                        android:id="@+id/clear_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:onClick="@{()->activity.onDeleteName()}"
                        android:padding="10dp"
                        android:src="@drawable/icon_common_24x24_close" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/Ceff1f6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_info"
                        android:textColor="@color/C151515"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/birthday"
                            android:textColor="@color/C777777"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.kyad.traystorage.app.common.font.FontTextView
                                android:id="@+id/edit_birthday"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:enabled="@{activity.isEditable}"
                                android:hint="@string/birthday"
                                android:onClick="@{()->activity.onClickBirthDay()}"
                                android:text="@={model.birthday}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/line_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Ceeeeee" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/email"
                            android:textColor="@color/C777777"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_email"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:enabled="@{activity.isEditable}"
                                android:hint="@string/email"
                                android:includeFontPadding="false"
                                android:paddingVertical="10dp"
                                android:text="@={model.email}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/line_email"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/Ceeeeee" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/gender"
                            android:textColor="@color/C777777"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <com.kyad.traystorage.app.common.font.FontButton
                                android:id="@+id/button_sex1"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_btn_sex"
                                android:enabled="@{activity.isEditable}"
                                android:includeFontPadding="false"
                                android:onClick="@{()->activity.onSex1()}"
                                android:paddingHorizontal="10dp"
                                android:text="@string/male"
                                android:textColor="@color/focus_color"
                                android:textSize="14dp" />

                            <com.kyad.traystorage.app.common.font.FontButton
                                android:id="@+id/button_sex2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_btn_sex"
                                android:enabled="@{activity.isEditable}"
                                android:includeFontPadding="false"
                                android:onClick="@{()->activity.onSex2()}"
                                android:paddingHorizontal="10dp"
                                android:text="@string/female"
                                android:textColor="@color/focus_color"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.kyad.traystorage.app.common.font.FontButton
                        android:id="@+id/next_btn"
                        style="@style/font_spoqahansansneo_bold"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_btn_approve_both"
                        android:enabled="@{activity.isEditable}"
                        android:gravity="center"
                        android:onClick="@{()->activity.onConfirm()}"
                        android:text="@string/save"
                        android:textColor="@{activity.isEditable?@color/white:@color/gray}"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>