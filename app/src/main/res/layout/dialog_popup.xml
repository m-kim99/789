<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.kyad.traystorage.app.main.MainActivity.PopupInfoPresenter" />
    </data>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <ImageView
                    android:onClick="@{() -> presenter.onClickImage()}"
                    android:id="@+id/image_view"
                    android:visibility="@{presenter.popupInfo.content_type == 0 ? View.VISIBLE : View.GONE}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/intro1"
                    android:scaleType="fitXY" />
                <WebView
                    android:onClick="@{() -> presenter.onClickImage()}"
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{presenter.popupInfo.content_type == 0 ? View.GONE : View.VISIBLE}"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/btn_never"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="14dp"
                    android:gravity="center"
                    android:onClick="@{()->presenter.onClickNever()}"
                    android:text="@string/never_look"
                    android:background="@color/Cd8d8d8"
                    android:textColor="@color/focus_color"
                    android:textSize="18dp" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/btn_close"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="14dp"
                    android:gravity="center"
                    android:onClick="@{()->presenter.onClickClose()}"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:background="@color/C1e319d"
                    android:textSize="18dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:background="@color/black" />

        </LinearLayout>
    </RelativeLayout>
</layout>