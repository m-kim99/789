<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="holder"
            type="com.kyad.traystorage.app.setting.FaqActivity.ListAdapter.ListItemViewHolder" />
        <variable
            name="data"
            type="com.kyad.traystorage.data.model.ModelFaq" />

    </data>

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/faq_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="12dp"
                android:onClick="@{()->holder.onExpand()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:orientation="horizontal">

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:includeFontPadding="false"
                    android:text="Q."
                    android:textColor="@color/focus_color"
                    android:textSize="15dp" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/title_normal"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:text="@{data.title}"
                    android:textColor="@{!data.isExpanded ? @color/C151515 : @color/focus_color}"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/img_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:src="@{data.isExpanded ? @drawable/ic_arrow_up : @drawable/ic_arrow_down}"/>

            </LinearLayout>

            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_spoqahansansneo_regular"
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:includeFontPadding="false"
                android:text="@{data.content}"
                android:textColor="@color/C151515"
                android:textSize="15dp"
                android:visibility="@{data.isExpanded ? View.VISIBLE : View.GONE}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Ceeeeee" />

    </LinearLayout>

</layout>