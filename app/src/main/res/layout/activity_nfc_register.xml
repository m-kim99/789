<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="com.kyad.traystorage.app.main.NFCRegisterActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF">

            <!-- 뒤로가기 버튼 -->
            <ImageView
                android:id="@+id/ib_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_back"
                android:onClick="@{()->activity.onBackPressed()}"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 제목 -->
            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_notosans_kr_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="NFC 등록"
                android:textColor="#111111"
                android:textSize="18sp"
                android:includeFontPadding="false" />
        </RelativeLayout>

        <!-- 본문 ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:gravity="center_horizontal">

                <!-- 제목 텍스트 -->
                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_notosans_kr_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="NFC 스티커에 휴대폰을 태그해\n문서를 등록해 주세요."
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:lineHeight="32sp"
                    android:gravity="center"
                    android:includeFontPadding="false" />

                <!-- 부제목 텍스트 -->
                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_notosans_kr_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="지금 쉽고 편리하게 문서를 등록하고\nNFC태그를 통해 관리 및 공유해 보세요!"
                    android:textColor="#6B6C6E"
                    android:textSize="16sp"
                    android:lineHeight="24sp"
                    android:gravity="center"
                    android:includeFontPadding="false" />

                <!-- NFC 이미지 -->
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_nfc_150" />

                <!-- 공간 확보 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </ScrollView>

        <!-- 취소 버튼 -->
        <com.kyad.traystorage.app.common.font.FontButton
            android:id="@+id/next_btn"
            style="@style/font_notosans_kr_bold"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_btn_login_secondary"
            android:text="취소하기"
            android:textColor="#1E319D"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="@{()->activity.onCancelClick()}"
            android:includeFontPadding="false" />

    </LinearLayout>
</layout>