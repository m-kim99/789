<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.SigninActivity" />
    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:onClick="@{()->activity.onBackPressed()}"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="28dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bell" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/logo_texttype" />
                </LinearLayout>

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:includeFontPadding="false"
                    android:text="@string/signin_home1"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/signin_home2"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <com.kyad.traystorage.app.common.font.FontEditText
                    android:id="@+id/text_id"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/id"
                    android:includeFontPadding="false"
                    android:maxLength="25"
                    android:onTextChanged="@{() -> activity.onChangedId()}"
                    android:paddingHorizontal="24dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <com.kyad.traystorage.app.common.font.FontEditText
                    android:id="@+id/text_password"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/password"
                    android:includeFontPadding="false"
                    android:maxLength="12"
                    android:paddingHorizontal="24dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <LinearLayout
                        android:id="@+id/lly_auto_login"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/auto_check"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:onClick="@{() -> activity.checkAutoLogin()}"
                            android:padding="1dp"
                            android:src="@drawable/bg_checkbox" />

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:onClick="@{() -> activity.checkAutoLogin()}"
                            android:text="@string/auto_login"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_below="@+id/lly_auto_login"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:onClick="@{() -> activity.goFindId()}"
                            android:text="@string/find_id"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@color/gray" />

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:onClick="@{() -> activity.goPasswordReset()}"
                            android:text="@string/password_reset"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />
                    </LinearLayout>
                </RelativeLayout>

                <com.kyad.traystorage.app.common.font.FontButton
                    android:id="@+id/btn_login"
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btn_confirm_bottom"
                    android:onClick="@{() -> activity.doLogin()}"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>