<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.ChangePasswordActivity" />
    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Status Bar -->
        <include
            layout="@layout/include_status_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->activity.onBackPressed()}"
                android:src="@drawable/ic_back" />

            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_notosans_kr_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="@string/change_password"
                android:textColor="#111111"
                android:textSize="18sp" />

        </RelativeLayout>

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="32dp">

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/text_intro"
                    style="@style/font_notosans_kr_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:includeFontPadding="false"
                    android:lineHeight="32sp"
                    android:text="@string/change_password1"
                    android:textColor="#111111"
                    android:textSize="22sp" />

                <!-- 비밀번호 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/password"
                        android:textColor="#535455"
                        android:textSize="14sp" />

                    <com.kyad.traystorage.app.common.font.FontEditText
                        android:id="@+id/edit_password"
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/password_hint"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:onTextChanged="@{()->activity.onValidate()}"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:textColor="#111111"
                        android:textColorHint="#6B6C6E"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/line_password"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D6D7DC" />
                </LinearLayout>

                <!-- 비밀번호 확인 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/password_confirm"
                        android:textColor="#535455"
                        android:textSize="14sp" />

                    <com.kyad.traystorage.app.common.font.FontEditText
                        android:id="@+id/edit_password2"
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/reenter_password"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:onTextChanged="@{()->activity.onValidate()}"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:textColor="#111111"
                        android:textColorHint="#6B6C6E"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/line_password2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D6D7DC" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- 하단 Dock -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#EBEDF0" />

            <com.kyad.traystorage.app.common.font.FontButton
                android:id="@+id/next_btn"
                style="@style/font_notosans_kr_bold"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_btn_login_primary"
                android:enabled="@{activity.isEnabled}"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="@{()->activity.onConfirm()}"
                android:text="@string/change_password_btn"
                android:textColor="@{activity.isEnabled ? @color/white : @color/gray}"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Navigation Bar -->
        <include
            layout="@layout/include_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

</layout>