<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="fragment"
            type="com.kyad.traystorage.app.chatbot.ChatbotFragment" />
        <variable
            name="isExpanded"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/focus_color"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chatbot" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="AI 챗봇"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_expand"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@{isExpanded ? @drawable/ic_collapse : @drawable/ic_expand}"
                    android:onClick="@{() -> fragment.onExpandClick()}"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:src="@drawable/icon_common_24x24_close"
                    android:onClick="@{() -> fragment.onCloseClick()}"
                    app:tint="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_height_default"
            android:padding="16dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_chat_message" />

        <LinearLayout
            android:id="@+id/quick_questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp">

            <com.kyad.traystorage.app.common.font.FontTextView
                android:id="@+id/quick_question_1"
                style="@style/font_spoqahansansneo_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quick_question"
                android:text="문서 검색"
                android:textColor="@color/focus_color"
                android:textSize="12sp"
                android:onClick="@{() -> fragment.onQuickQuestion1()}" />

            <com.kyad.traystorage.app.common.font.FontTextView
                android:id="@+id/quick_question_2"
                style="@style/font_spoqahansansneo_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_quick_question"
                android:text="전체 문서 수는?"
                android:textColor="@color/focus_color"
                android:textSize="12sp"
                android:onClick="@{() -> fragment.onQuickQuestion2()}" />

            <com.kyad.traystorage.app.common.font.FontTextView
                android:id="@+id/quick_question_3"
                style="@style/font_spoqahansansneo_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_quick_question"
                android:text="최근 문서 보여줘"
                android:textColor="@color/focus_color"
                android:textSize="12sp"
                android:onClick="@{() -> fragment.onQuickQuestion3()}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_chat_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.kyad.traystorage.app.common.font.FontEditText
                    android:id="@+id/input_message"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="질문하세요..."
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/C999999"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_send_button"
                android:onClick="@{() -> fragment.onSendClick()}">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_send" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
