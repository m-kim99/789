<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 상단 제목 영역 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <com.kyad.traystorage.app.common.font.FontTextView
            style="@style/font_notosans_kr_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TrayStorage 권한 안내"
            android:textColor="#111111"
            android:textSize="18sp"
            android:includeFontPadding="false" />

        <com.kyad.traystorage.app.common.font.FontTextView
            style="@style/font_notosans_kr_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="TrayStorage는 다음 권한들을 사용하고 있어요.\n서비스의 원활한 사용을 위해 권한을 허용해 주세요."
            android:textColor="#6B6C6E"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:includeFontPadding="false" />
    </LinearLayout>

    <!-- 권한 리스트 영역 -->
    <ScrollView
        android:id="@+id/permission_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상단 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEDF0" />

            <!-- 필수 접근 권한 제목 -->
            <com.kyad.traystorage.app.common.font.FontTextView
                style="@style/font_notosans_kr_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="필수 접근 권한"
                android:textColor="#1E319D"
                android:textSize="16sp"
                android:includeFontPadding="false" />

            <!-- 권한 박스 1: 연락처 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_permission_box">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_permission_call" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:includeFontPadding="false" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="연락처 기반 친구초대 서비스 제공"
                        android:textColor="#6B6C6E"
                        android:textSize="14sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <!-- 권한 박스 2: 카메라 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_permission_box">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_permission_camera" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카메라"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:includeFontPadding="false" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="문서 사진 촬영 서비스 제공"
                        android:textColor="#6B6C6E"
                        android:textSize="14sp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <!-- 권한 박스 3: 저장공간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_permission_box">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_permission_storage" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저장공간"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:includeFontPadding="false" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_notosans_kr_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="촬영한 사진이 저장되며 문서 사진을\n첨부 할 수 있는 서비스 제공"
                        android:textColor="#6B6C6E"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </LinearLayout>

            <!-- 하단 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#EBEDF0" />

            <!-- 안내 문구 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:gravity="start">

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_bullet_dot" />

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_notosans_kr_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="권한 오류 시 앱을 삭제하신 후 재설치 하시면 다시\n권한을 부여할 수 있어요."
                    android:textColor="#6B6C6E"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:includeFontPadding="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 하단 버튼 영역 -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEDF0" />

        <com.kyad.traystorage.app.common.font.FontButton
            android:id="@+id/btn_confirm"
            style="@style/font_notosans_kr_bold"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/bg_btn_confirm_bottom"
            android:gravity="center" />

        <!-- Android Navigation Bar 공간 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white" />
    </LinearLayout>
</RelativeLayout>
