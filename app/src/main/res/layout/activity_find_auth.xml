<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.FindAuthActivity" />
        <variable
            name="viewModel"
            type="com.kyad.traystorage.app.auth.FindAuthActivity.ViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{activity.showPhoneTitle ? View.VISIBLE : View.GONE}">

                <com.kyad.traystorage.app.common.font.FontTextView
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/phone_cert"
                    android:textColor="@color/C151515"
                    android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/ib_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="@{()->activity.onBackPressed()}"
                        android:padding="15dp"
                        android:src="@drawable/icon_gnb_close" />
            </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:onClick="@{()->activity.onBackPressed()}"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back"
                android:visibility="@{activity.showPhoneTitle ? View.GONE : View.VISIBLE}" />
        </RelativeLayout>

        <ScrollView
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.kyad.traystorage.app.common.font.FontTextView
                    android:id="@+id/text_intro"
                    style="@style/font_spoqahansansneo_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="34dp"
                    android:text="@{activity.hasUserId? @string/findauth_home2: @string/findauth_home1}"
                    android:textColor="@color/black"
                    android:layout_marginBottom="45dp"
                    android:textSize="22dp" />

                <LinearLayout
                    android:visibility="@{activity.hasUserId?View.GONE:View.VISIBLE}"
                    android:id="@+id/layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:orientation="vertical">
                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                    <com.kyad.traystorage.app.common.font.FontEditText
                        style="@style/font_spoqahansansneo_regular"
                        android:id="@+id/edit_id"
                        android:text="@={viewModel.loginID}"
                        android:layout_width="match_parent"
                        android:includeFontPadding="false"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingVertical="10dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:hint="@string/enter_id" />
                    <View
                        android:id="@+id/line_id"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:orientation="vertical">
                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kyad.traystorage.app.common.font.FontEditText
                            android:id="@+id/edit_phonenumber"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/enter_phone_number"
                            android:includeFontPadding="false"
                            android:maxLength="11"
                            android:inputType="number"
                            android:paddingVertical="10dp"
                            android:text="@={viewModel.phoneNumber}"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/delete_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/button_req"
                            android:onClick="@{()->activity.onDeletetext()}"
                            android:src="@drawable/icon_common_24x24_close" />

                        <com.kyad.traystorage.app.common.font.FontButton
                            android:onClick="@{()->activity.onAuthReq()}"
                            android:id="@+id/button_req"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:includeFontPadding="false"
                            android:background="@drawable/bg_btn_authreq"
                            android:paddingHorizontal="10dp"
                            android:text="@string/auth_request"
                            android:textColor="@color/focus_color"
                            android:textSize="14dp" />
                    </RelativeLayout>
                    <View
                        android:id="@+id/line_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">
                    <com.kyad.traystorage.app.common.font.FontTextView
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cert_number"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kyad.traystorage.app.common.font.FontEditText
                            android:id="@+id/edit_certnumber"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/enter_cert_number"
                            android:inputType="number"
                            android:paddingVertical="10dp"
                            android:includeFontPadding="false"
                            android:text="@={viewModel.certNumber}"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <com.kyad.traystorage.app.common.font.FontTextView
                            android:id="@+id/text_time"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="14dp" />
                    </RelativeLayout>
                    <View
                        android:id="@+id/line_certnumber"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/resend_button"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.kyad.traystorage.app.common.font.FontTextView
                        android:onClick="@{()->activity.onResendCode()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resent_code"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:id="@+id/resend_button2"
                        />
                    <View
                        android:layout_toLeftOf="@id/resend_button2"
                        android:layout_toRightOf="@id/resend_button2"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        />
                </RelativeLayout>

                <com.kyad.traystorage.app.common.font.FontButton
                    android:id="@+id/next_btn"
                    android:layout_marginTop="50dp"
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:enabled="@{activity.isEnabled}"
                    android:background="@drawable/bg_btn_approve_both"
                    android:gravity="center"
                    android:onClick="@{()->activity.onConfirm()}"
                    android:text="@string/confirm"
                    android:textColor="@{activity.isEnabled?@color/white:@color/gray}"
                    android:layout_marginBottom="20dp"
                    android:textSize="15dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>