<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.kyad.traystorage.app.auth.SignupActivity" />

        <variable
            name="viewModel"
            type="com.kyad.traystorage.app.auth.SignupActivity.ViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:onClick="@{()->activity.onBackPressed()}"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:id="@+id/step_layout"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@{activity.step >= 0 ? @color/focus_color : @color/Ceeeeee}" />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@{activity.step >= 1 ? @color/focus_color : @color/Ceeeeee}" />

            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@{activity.step == 2 ? @color/focus_color : @color/Ceeeeee}" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <com.kyad.traystorage.app.common.font.FontTextView
                        android:id="@+id/text_intro"
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/current_num"
                        android:lineHeight="34dp"
                        android:text="@string/signup_title1"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        android:id="@+id/current_num"
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/all_num"
                        android:text="1"
                        android:textColor="@color/focus_color"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <com.kyad.traystorage.app.common.font.FontTextView
                        android:id="@+id/all_num"
                        style="@style/font_spoqahansansneo_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:text="/3"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/step_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{activity.step == 0 ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/id"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_id"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/password_hint"
                                android:includeFontPadding="false"
                                android:paddingVertical="10dp"
                                android:text="@={viewModel.loginID}"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:paddingRight="4dp"
                                android:layout_toStartOf="@+id/button_double_check"
                                android:layout_toLeftOf="@+id/button_double_check"/>

                            <com.kyad.traystorage.app.common.font.FontButton
                                android:id="@+id/button_double_check"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_btn_authreq"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:onClick="@{()->activity.onIdDoubleCheck()}"
                                android:paddingHorizontal="10dp"
                                android:text="@string/double_chceck"
                                android:textColor="@color/focus_color"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/line_id"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_password"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/password_hint"
                                android:includeFontPadding="false"
                                android:paddingVertical="10dp"
                                android:password="true"
                                android:singleLine="true"
                                android:text="@={viewModel.password}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/line_password"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password_confirm"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_password2"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/reenter_password"
                                android:includeFontPadding="false"
                                android:paddingVertical="10dp"
                                android:password="true"
                                android:singleLine="true"
                                android:text="@={viewModel.password2}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/line_password2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/step_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{activity.step == 1 ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="35dp"
                        android:orientation="vertical">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_phonenumber"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/enter_phone_number"
                                android:includeFontPadding="false"
                                android:inputType="number"
                                android:paddingVertical="10dp"
                                android:singleLine="true"
                                android:text="@={viewModel.phoneNumber}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/delete_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/button_req"
                                android:onClick="@{()->activity.onDeletetext()}"
                                android:src="@drawable/icon_common_24x24_close" />

                            <com.kyad.traystorage.app.common.font.FontButton
                                android:id="@+id/button_req"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_btn_authreq"
                                android:includeFontPadding="false"
                                android:onClick="@{()->activity.onAuthReq()}"
                                android:paddingHorizontal="10dp"
                                android:text="@string/auth_request"
                                android:textColor="@color/focus_color"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/line_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cert_number"
                            android:textColor="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.kyad.traystorage.app.common.font.FontEditText
                                android:id="@+id/edit_certnumber"
                                style="@style/font_spoqahansansneo_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/enter_cert_number"
                                android:includeFontPadding="false"
                                android:paddingVertical="10dp"
                                android:singleLine="true"
                                android:text="@={viewModel.certNumber}"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <com.kyad.traystorage.app.common.font.FontButton
                                android:id="@+id/button_cert_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_btn_authreq"
                                android:includeFontPadding="false"
                                android:onClick="@{()->activity.onAuthConfirm()}"
                                android:paddingHorizontal="10dp"
                                android:text="@string/confirm"
                                android:textColor="@color/focus_color"
                                android:textSize="14dp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/line_certnumber"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_gray" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/resend_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kyad.traystorage.app.common.font.FontTextView
                            android:id="@+id/resend_button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/text_time"
                            android:onClick="@{()->activity.onResendCode()}"
                            android:text="@string/resent_code"
                            android:textColor="@color/gray"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/resend_button2"
                            android:layout_toRightOf="@id/resend_button2"
                            android:background="@color/light_gray" />

                        <com.kyad.traystorage.app.common.font.FontTextView
                            android:id="@+id/text_time"
                            style="@style/font_spoqahansansneo_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/term_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="@{activity.step == 2 ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/term_checkAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->activity.onTermAllClick()}"
                            android:src="@drawable/bg_checkbox"
                            app:isSelect="@{activity.isAllChecked}" />

                        <com.kyad.traystorage.app.common.font.FontTextView
                            style="@style/font_spoqahansansneo_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:includeFontPadding="false"
                            android:onClick="@{()->activity.onTermAllClick()}"
                            android:text="@string/all_agree"
                            android:textColor="@color/C333333"
                            android:textSize="18dp" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/agree_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_agreement" />
                </LinearLayout>

                <com.kyad.traystorage.app.common.font.FontButton
                    android:id="@+id/next_btn"
                    style="@style/font_spoqahansansneo_bold"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btn_approve_both"
                    android:enabled="@{activity.isEnabled}"
                    android:gravity="center"
                    android:onClick="@{()->activity.onNext()}"
                    android:text="@string/next"
                    android:textColor="@{activity.isEnabled?@color/white:@color/gray}"
                    android:textSize="15dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</layout>